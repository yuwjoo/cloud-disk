{
  "include": [
    "env.d.ts",
    "src/preload/**/*"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/preload/*"
      ]
    },
  }
}