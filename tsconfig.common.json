{
  "include": [
    "./src/common/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./node_modules/.tmp",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "paths": {
      "common/*": [
        "./src/common/*"
      ],
    },
  }
}